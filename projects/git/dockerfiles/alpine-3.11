FROM alpine:3.11

RUN apk update && apk upgrade
RUN apk update && apk add \
    asciidoc \
    autoconf \
    bash \
    build-base \
    curl-dev \
    diffutils \
    findutils \
    gettext-dev \
    git \
    gnupg \
    grep \
    openssh-client \
    pcre2-dev \
    pkgconf \
    python \
    python3 \
    shadow \
    subversion \
    tcl \
    unzip
RUN useradd --create-home --user-group user

USER user

ENV CI_SRC "/src/ci"
ENV GIT_SKIP_TESTS "t4061 t5616 t5703"

COPY --chown=user:user . "$CI_SRC"
